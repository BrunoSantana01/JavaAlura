package br.com.alura.java.io.teste;

import java.io.BufferedReader;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.InputStreamReader;

public class TesteEscrita {
	public static void main(String[] args) throws IOException {
		
		// Fluxo de entrada com Arquivo
		FileOutputStream fis = new FileOutputStream("lorem.txt"); 
		// Estabelece a entrada, mas lê apenas os binarios//Saida do .read() : 34
		Writer isr = new OutputStreamWriter(fis); 
		/*Lê os bits capturados com o FIS, capaz de retornar o numero de caracteres, mas não os caracteres//Saida do .read() : 34*/
		BufferedReader br = new BufferedReader(isr); //Aqui sim é capaz de apresentar os caracteres//Saida do .read() : Frase
		
		
		String linha = br.readLine();
		
		System.out.println(linha);
		
		br.close();
	}
}
